<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_consulting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="李嘉诚又双叒叕卖楼了！大撤离的真正原因曝光！"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/iv_item_consulting_image"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_item_consulting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_consulting_title"
        android:layout_below="@+id/tv_item_consulting_title"
        android:layout_marginTop="5dp"
        android:text="12/21" />

    <ImageView
        android:id="@+id/iv_item_consulting_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_item_consulting_title"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_save" />

</RelativeLayout>
