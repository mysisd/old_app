<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_bg1">

    <!--添加自定义边框mine_login_bg-->
    <LinearLayout
        android:id="@+id/lin_login"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mine_login_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="@string/phone"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/et_register_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:layout_marginStart="95dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/enter_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="#FFFFFF"
                android:textColorHint="#BEBEBE"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="@string/code"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/et_register_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:layout_marginStart="95dp"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/btn_register_code"
                android:layout_toStartOf="@+id/btn_register_code"
                android:background="@null"
                android:ems="10"
                android:hint="@string/enter_code"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="#FFFFFF"
                android:textColorHint="#BEBEBE"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_register_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0379B5"
                android:text="@string/acquire_code"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:layout_alignBaseline="@+id/et_register_code"
                android:layout_alignBottom="@+id/et_register_code"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:gravity="center"
                android:text="@string/pwd"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_register_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:layout_marginStart="95dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/enter_pwd"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#BEBEBE"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="@string/confirm_pwd"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/et_register_pwd_again"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:layout_marginStart="95dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/enter_pwd"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#BEBEBE"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_register_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_login"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="@string/register_agree"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_register_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cb_register_agree"
        android:layout_toEndOf="@+id/cb_register_agree"
        android:layout_toRightOf="@+id/cb_register_agree"
        android:text="@string/register_agreement"
        android:textColor="#FF0000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_register_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cb_register_agree"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#0379B5"
        android:text="@string/register_confirm"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_register_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register_confirm"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp"
        android:background="#0fc6c0"
        android:text="@string/cancel"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>
